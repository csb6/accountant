{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25
    },
    "configurePresets": [
        {
            "name": "Default",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_EXTENSIONS": false
            },
            "binaryDir": "build"
        },
        {
            "name": "macOS",
            "description": "macOS toolchain using Homebrew",
            "inherits": ["Default"],
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "/opt/homebrew;/opt/homebrew/sqlite3;/usr/local/opt;/usr/local;/usr/local/opt/sqlite3;$env{SDKROOT};$env{SDKROOT}/System/Library/Frameworks/",
                "CMAKE_AR": "/usr/bin/ar",
                "CMAKE_FIND_USE_CMAKE_SYSTEM_PATH": false,
                "CMAKE_FIND_USE_SYSTEM_ENVIRONMENT_PATH": false
            }
        },
        {
            "name": "macOS-Clang",
            "inherits": ["macOS"],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "/usr/local/opt/llvm/bin/clang++"
            },
            "environment": {
                "CXXFLAGS": "$penv{CXXFLAGS} -pedantic-errors -Wall -Wextra"
            }
        }
    ]
}
